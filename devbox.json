{
  "packages": {
    "go":   "1.21.3",
    "hugo": "0.124.0",
    "obsidian": {
      "version":        "1.4.16",
      "allow_insecure": ["electron-25.9.0"]
    },
    "git":                   "2.42.0",
    "python310Packages.pip": "23.2.1",
    "python":                "3.10.13",
    "awscli":                "1.32.21",
    "pre-commit":            "3.6.1",
    "duckdb":                "0.10.1",
    "ffmpeg":                "6.1.1"
  },
  "shell": {
    "init_hook": [
      ". $VENV_DIR/bin/activate",
      "pip install -r requirements.txt",
      "pre-commit install",
      "make fetch",
      "make clear-build"
    ],
    "scripts": {
      "build":          "make build",
      "clear-build":    "make clear-build",
      "watch-run":      "make watch-run",
      "build-target":   "make build-target",
      "run-target":     "make run-target",
      "duckdb-export":  "make duckdb-export",
      "fetch":          "make fetch"
    }
  }
}
