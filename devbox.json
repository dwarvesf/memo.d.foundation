{
  "packages": {
    "go":                     "1.21.3",
    "rustup":                 "1.26.0",
    "libiconv":               "2.38",
    "gcc":                    "13.2.0",
    "hugo":                   "0.120.2",
    "obsidian":               "1.4.16",
    "fswatch":                "1.17.1",
    "git":                    "2.42.0",
    "pipenv":                 "2023.2.4",
    "python310Packages.pip":  "23.2.1",
    "python":                 "3.10.13",
    "trash-cli":              "0.23.11.10",
    "awscli":                 "1.32.21",
    "pre-commit":             "3.6.1",
    "duckdb":                 "0.10.0",
    "git-credential-manager": "2.4.1"
  },
  "shell": {
    "init_hook": [
      "export PATH=$PATH:$HOME/.cargo/bin",
      "rustup default stable",
      "cargo install obsidian-export",
      ". $VENV_DIR/bin/activate",
      "pip install -r requirements.txt",
      "pre-commit install",
      "git config credential.helper $(which git-credential-manager)",
      "./git-credential-manager.sh"
    ],
    "scripts": {
      "watch-run":    "make watch-run",
      "build-target": "make build-target",
      "run-target":   "make run-target",
      "backup-all":   "make backup-all",
      "fetch":        "make fetch"
    }
  }
}
